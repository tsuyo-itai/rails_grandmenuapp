<% provide(:title, "Log in") %>

<h1>ログイン</h1>

<div class="wrapper--form--box">

  <%= form_with(url: login_path, scope: :session) do |f| %>

    <% if flash[:error_messages] %>
      <div class="alert alert-danger">
        <ul>
          <% flash[:error_messages].each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h4>メールアドレス</h4>
    <%= f.email_field :email, class: 'text_box'  %>

    <h4>パスワード</h4>
    <%= f.password_field :password, class: 'text_box' %>

    <%= f.submit "Log in", class: "submit_button" %>
  <% end %>
</div>